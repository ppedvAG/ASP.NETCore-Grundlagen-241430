@model (bool, string)
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

@if (Model.Item1)
{
	<h1>Hallo @Model.Item2</h1>
}

<cache enabled=true expires-after="@TimeSpan.FromSeconds(10)">@DateTime.Now</cache>
<p>@DateTime.Now</p>

<form method="post">
	Username: <input type="text" asp-route="user" name="user" />
	<br />
	Passwort: <input type="password" asp-route="pw" name="pw" />
	<br />
	Eingeloggt bleiben: <input type="checkbox" asp-route="eingeloggtBleiben" name="eingeloggtBleiben" />
	<br />
	<button>Login</button>
</form>

<form method="post" enctype="multipart/form-data" asp-action="FileUpload">
	Datei auswählen: <input type="file" name="file"/>
	<br/>
	<button type="submit">Upload</button>
</form>